{
    "compilerOptions": {
        "outDir": "dist/esm",
        "resolveJsonModule": true,
        "sourceMap": true,
        "rootDirs": [
            "src",
            "dist"
        ],
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "jsx": "react",
        "declaration": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "paths": {
            "@mycompany/design-system/*": [
                "./src/*"
            ],
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/__tests__/**",
        "**/*.test.tsx"
    ]
}
